<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:text="03.06.16"
        android:textColor="@color/light_gray" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_element_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_date"
        android:background="#00000000"
        android:clickable="false"
        android:cursorVisible="false"
        android:drawableLeft="@mipmap/ic_markery"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="ул.Металистов 7"
        android:textColor="@color/mainblack"
        android:textSize="@dimen/mtext_size" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_element_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText4"
        android:layout_toLeftOf="@+id/btn_retryzakaz"
        android:layout_toStartOf="@+id/btn_retryzakaz"
        android:background="#00000000"
        android:clickable="false"
        android:cursorVisible="false"
        android:drawableLeft="@mipmap/ic_markerb"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="пр.Победы 29"
        android:textColor="@color/mainblack"
        android:textSize="@dimen/mtext_size" />

    <ImageView
        android:id="@+id/btn_retryzakaz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_spisokzakaz"
        android:layout_toLeftOf="@+id/btn_spisokzakaz"
        android:layout_toStartOf="@+id/btn_spisokzakaz"
        android:background="@mipmap/icon_retry"
        android:focusable="false" />

    <ImageView
        android:id="@+id/btn_spisokzakaz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText5"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/icon_spisok"
        android:focusable="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/btn_spisokzakaz"
        android:background="@color/black"></LinearLayout>
</RelativeLayout>