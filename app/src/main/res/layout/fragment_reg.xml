<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_element_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:drawableLeft="@mipmap/icon_person"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:textColor="@color/mainblack"
        android:textColorHint="#b1b1b1"
         />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_element_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText3"
        android:drawableLeft="@mipmap/icon_phone"
        android:ems="10"
        android:hint="@string/signin_phone"
        android:inputType="phone"
        android:textColor="@color/mainblack"
        android:textColorHint="#b1b1b1"
       />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_element_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText4"
        android:drawableLeft="@mipmap/icon_pass"
        android:ems="10"
        android:hint="@string/pass"
        android:inputType="textPassword"
        android:textColor="@color/mainblack"
        android:textColorHint="#b1b1b1"
         />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_element_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText5"
        android:drawableLeft="@mipmap/icon_pass"
        android:ems="10"
        android:hint="@string/pass_again"
        android:inputType="textPassword"
        android:textColor="@color/mainblack"
        android:textColorHint="#b1b1b1"
      />

    <Button
        android:id="@+id/btn_reg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_element_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText6"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/mainyellow"
        android:onClick="OnClickReg"
        android:text="@string/btn_registration"
        android:textColor="@color/white" />

</RelativeLayout>
