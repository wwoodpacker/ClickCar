<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_massage_driver"
        android:id="@+id/imageView16" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="MassageMassageMassageMassageMassageMassageMassageMassageMassageMassageMassage"
        android:id="@+id/text_massage"
        android:layout_toRightOf="@+id/imageView16"

        android:layout_alignTop="@+id/imageView16"
        android:layout_alignBottom="@+id/imageView16"
        android:layout_toLeftOf="@+id/img" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_star1"
        android:id="@+id/img"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_below="@+id/text_massage"
        />
</RelativeLayout>