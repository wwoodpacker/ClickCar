<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>

    </style>
    <!--ActionBar Register style-->
    <style name="ActionBarRegisterStyle" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:height">100dip</item>
        <item name="height">100dip</item>
        <item name="android:background">@color/actionBar_color</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>

    </style>
    <style name="Theme.MyRegStyle" parent="android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBarRegisterStyle</item>
        <item name="actionBarStyle">@style/ActionBarRegisterStyle</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>
    <style name="MyTheme.ActionBar.TitleTextStyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title" >
        <item name="android:textSize">25sp</item>


    </style>

    <!--ActionBar Register style-->
    <style name="drawertheme">
        
        <item name="android:textSize">20sp</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/mainblue</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />




</resources>
