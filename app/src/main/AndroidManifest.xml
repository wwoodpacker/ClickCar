<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.taxi.clickcar">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Register"
            android:label="@string/label_register"
            android:logo="@drawable/ic_account_box"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyRegStyle">

        </activity>
        <activity android:name=".ConfirmCode"
            android:screenOrientation="portrait"
            android:label="@string/confirm_code"
            android:logo="@drawable/ic_confirm_code"
            android:theme="@style/Theme.MyRegStyle"
            >

        </activity>
        <activity
            android:name=".Intro.ClickIntro"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
